.container .topBar {
    background-color: rgb(200, 200, 200);
    text-align: center;
    margin: 20rpx 60rpx 20rpx;
}

.container .content .findItem {
    display: flex;
    margin: 10rpx 10rpx;
    padding: 10rpx 0;
    border: 1rpx dashed #eee;
}

.container .content .findItem .pic {
    flex: 4;
    padding: 0 10rpx;
    height: 120rpx;
}

.container .content .findItem .msg {
    flex: 6;
    margin-left: 10rpx;
    font-size: 36rpx;
}

.container .content .findItem .msg .price {
    color: red;
    font-size: 26rpx;
}

.container .content .findItem .msg .info {
    text-align: right;
    margin-right: 40rpx;
    font-size: 22rpx;
}